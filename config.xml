<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="mobile.client.Danalog"
    version="1.0.5" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Danalog</name>
    <description>Danalog Client</description>
    
     
     <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />

    
    <icon gap:platform="android" src="icon.png" gap:role="default" />
    
    
    
    <icon gap:platform="blackberry" src="res/icon/blackberry/icon-80.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="res/icon/blackberry/icon-80.png" />
    

	<icon gap:platform="ios" height="57" src="resources/icons/icon.png" width="57" />
	<icon gap:platform="ios" height="72" src="resources/icons/72.png" width="72" />
    <icon gap:platform="ios" height="76" src="resources/icons/76.png" width="76" />
    <icon gap:platform="ios" height="120" src="resources/icons/120.png" width="120" />
    <icon gap:platform="ios" height="152" src="resources/icons/152.png" width="152" />
    <icon gap:platform="ios" height="180" src="resources/icons/180.png" width="180" />


    <gap:splash gap:platform="ios" height="480" src="resources/startup/320X480.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="resources/startup/640X960.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="resources/startup/640X1136.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="resources/startup/768X1024.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="resources/startup/1024X768.png" width="1024" />

    <icon gap:platform="webos" src="res/icon/webos/icon-64.png" />
    <icon gap:platform="winphone" src="res/icon/windows-phone/icon-48.png" />
    <icon gap:platform="winphone" gap:role="background" src="res/icon/windows-phone/icon-173.png" />
   
    <gap:config-file platform="ios" parent="UIStatusBarHidden"><true/></gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance"><false/></gap:config-file>

    <feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>

    <gap:splash gap:platform="blackberry" src="res/screen/blackberry/screen-225.png" />
    <gap:splash gap:platform="winphone" src="res/screen/windows-phone/screen-portrait.jpg" />
	
	<gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <gap:plugin name="org.li8.inappbrowser" />

    <access origin="*" />

</widget>
